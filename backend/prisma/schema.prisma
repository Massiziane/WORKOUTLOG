generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        Int     @id @default(autoincrement())
  clerkId   String  @unique
  firstName String
  lastName  String?
  username  String?
  email     String  @unique
  role      Role    @default(USER)

  programs   Program[]
  workouts   Workout[]
  progresses Progress[]

  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

model Category {
  id       Int    @id @default(autoincrement())
  name     String
  Desc     String?

  exercises Exercise[]
}

model MuscleGroup {
  id          Int        @id @default(autoincrement())
  name        String

  exercises  Exercise[]
}

model Program {
  id   Int    @id @default(autoincrement())
  name String
  Desc String?

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  workouts  Workout[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workout {
  id   Int    @id @default(autoincrement())
  name String
  order Int?

  user   User @relation(fields: [userId], references: [id])
  userId Int

  program   Program? @relation(fields: [programId], references: [id])
  programId Int?

  workoutExercises WorkoutExercise[]

  progresses Progress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id    Int     @id @default(autoincrement())
  name  String
  notes String?

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?

  setTemplates     SetTemplate[]
  workoutExercises WorkoutExercise[]

  muscleGroup   MuscleGroup? @relation(fields: [muscleGroupId], references: [id])
  muscleGroupId Int?
}

model SetTemplate {
  id   Int  @id @default(autoincrement())

  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId Int

  reps   Int?
  weight Float?
  tempo  String?
  restTime  Int?
  type   SetType
}

enum SetType {
  WARMUP
  MAIN
  DROPSET
  FINISHER
}

model WorkoutExercise {
  id Int @id @default(autoincrement())
  order Int?
  notes String

  workout   Workout  @relation(fields: [workoutId], references: [id])
  workoutId Int

  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId Int

  workoutSets WorkoutSet[]
}

model WorkoutSet {
  id Int @id @default(autoincrement())
  setNumber Int?

  workoutExercise   WorkoutExercise @relation(fields: [workoutExerciseId], references: [id])
  workoutExerciseId Int

  progressAsBest  Progress[] @relation("BestSetForProgress")

  reps        Int?
  weight      Float?
  tempo       String?
  restTime Int?
  performedAt DateTime @default(now())
}

model Progress {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  workout   Workout @relation(fields: [workoutId], references: [id])
  workoutId Int

  totalVolume      Float

  bestSetId Int?  
  bestSet   WorkoutSet? @relation("BestSetForProgress", fields: [bestSetId], references: [id])
  consistencyScore Float
  createdAt        DateTime @default(now())
}



